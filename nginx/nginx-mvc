server {
    listen 80; # Nginx lắng nghe trên cổng 80 (HTTP)
    #listen [::]:80 default_server;
    server_name localhost;
    #server_name your_domain.com www.your_domain.com; # Thay thế bằng tên miền của bạn

    root /var/www/html/mvc/public; # Thay thế bằng đường dẫn đến thư mục gốc của dự án PHP của bạn
    index index.php index.html index.htm; # Đảm bảo index.php được ưu tiên

    # Log file cho server block này (Tùy chọn)
    #access_log /var/log/nginx/your_domain.com_access.log;
    #error_log /var/log/nginx/your_domain.com_error.log warn;

    # Cấu hình location cho các yêu cầu giao diện người dùng (frontend)
    # Mọi yêu cầu không phải là file hoặc thư mục tĩnh sẽ được chuyển hướng đến index.php
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Cấu hình location cho các yêu cầu quản trị (backend /admin/)
    # Mọi yêu cầu bắt đầu bằng /admin/ (không phải file/thư mục tĩnh)
    # sẽ được chuyển hướng đến public/admin/index.php
    location /admin/ {
        try_files $uri $uri/ /admin/index.php?$query_string;
    }

    # Đây là khối quan trọng xử lý TẤT CẢ các file .php
    # Nó chỉ cho phép thực thi index.php và admin/index.php
    # Các file .php khác sẽ bị từ chối truy cập trực tiếp.
    location ~ \.php$ {
        # Kiểm tra xem file PHP đang được yêu cầu có phải là một trong các điểm vào hợp lệ không.
        # $fastcgi_script_name là đường dẫn của script PHP tính từ thư mục gốc (`root`).
        # Ví dụ: /index.php, /admin/index.php, /admin/functions.php
        # Nếu đường dẫn KHÔNG phải là /index.php HOẶC /admin/index.php, thì từ chối.
        if ($fastcgi_script_name !~ ^/(index\.php|admin/index\.php)$) {
            return 404; # Trả về 404 Not Found (hoặc 403 Forbidden nếu bạn muốn ngăn chặn cứng rắn hơn)
        }

        # Nếu file PHP hợp lệ, chuyển yêu cầu đến PHP-FPM
        fastcgi_pass unix:/var/run/php/php8.3-fpm.sock; # Thay đổi 'php8.3-fpm.sock' tùy thuộc vào phiên bản PHP của bạn
        include fastcgi_params;
        # Đặt SCRIPT_FILENAME để PHP-FPM biết file nào cần thực thi.
        # $document_root là /var/www/html/mvc/public
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_read_timeout 300; # Tăng thời gian chờ đọc từ PHP-FPM
    }

    # Ngăn chặn truy cập các file ẩn (bắt đầu bằng .)
    location ~ /\. {
        deny all;
    }

    # Ngăn chặn truy cập các file cấu hình của Nginx
    location ~ /(conf|nginx) {
        deny all;
    }

    # Ngăn chặn truy cập các file nhạy cảm khác (ví dụ: .env, .git, Composer.json)
    location ~ /\.(env|git|svn|htacccess|htpasswd|json|yml|yaml)$ {
        deny all;
    }

    # Cấu hình cho trang lỗi tùy chỉnh
    # Thêm dấu '=' để Nginx buộc thay thế nội dung phản hồi bằng trang lỗi tùy chỉnh này
    error_page 404 = /404.html;
    # Đảm bảo file 404.html tồn tại trong thư mục 'root' của bạn (e.g., /var/www/html/mvc/public/404.html)
    # và Nginx có quyền đọc file này.
    location = /404.html {
        internal;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        internal;
    }
}
